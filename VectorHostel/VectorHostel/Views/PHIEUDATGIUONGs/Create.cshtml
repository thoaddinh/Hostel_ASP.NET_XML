@model VectorHostel.Models.PHIEUDATGIUONG

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Share/_LayoutPage1.cshtml";
   
}

<h2 class="text-center">Phiếu đặt giường</h2>

<section>
