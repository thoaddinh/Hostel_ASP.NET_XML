                        @Html.ValidationMessageFor(model => model.khachhang.sdt, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-5">
                    @Html.LabelFor(model => model.khachhang.diachi, htmlAttributes: new { @class = "control-label" })
                    <div class="col-md-10">
                        @Html.TextAreaFor(model => model.khachhang.diachi,5,40, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.khachhang.diachi, "", new { @class = "text-danger" })
                    </div>
                </div>


                <div class="col-md-offset-2 col-md-5">
                    @Html.LabelFor(model => model.khachhang.gioitinh, htmlAttributes: new { @class = "control-label" })
                    <div class="col-md-10">
                        <div class="checkbox">
                            @Html.RadioButtonFor(model => model.khachhang.gioitinh, true)<span>Nam</span> &nbsp;
                            @Html.RadioButtonFor(model => model.khachhang.gioitinh, false) <span> Nữ </span>
                            @Html.ValidationMessageFor(model => model.khachhang.gioitinh, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>

