            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="row">
                <div class="form-group col-md-5">
                    
                    Mã Khách Hàng: 
                    <div class="col-md-5">
                        @Html.EditorFor(model => model.makh, new { htmlAttributes = new { @class = "form-control" ,@disabled = "disable", @placeholder = ViewBag.makh } })
                       
                    </div>
                </div>

                <div class="form-group col-md-offset-2 col-md-5">
                    @Html.LabelFor(model => model.khachhang.hoten,"họ tên:", htmlAttributes: new { @class = "control-label" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.khachhang.hoten, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.khachhang.hoten, "", new { @class = "text-danger" })
                    </div>
                </div>
          </div>

            <div class="form-group row">
                <div class="col-md-5">
                    @Html.LabelFor(model => model.khachhang.ngaysinh, htmlAttributes: new { @class = "control-label " })
