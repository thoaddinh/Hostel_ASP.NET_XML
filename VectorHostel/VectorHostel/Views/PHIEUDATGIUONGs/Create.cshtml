                    <div class="col-md-10">
                        @Html.DropDownList("maloaigiuong",null, htmlAttributes: new { @class = "form-control" } )
                        @Html.ValidationMessageFor(model => model.chi_tiet_dat_giuong.ToList().FirstOrDefault().giuong.loaigiuong.malg, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-md-offset-2 col-md-5">
                    @Html.LabelFor(model => model.chi_tiet_dat_giuong.ToList().FirstOrDefault().giuong.magiuong, "Giường", htmlAttributes: new { @class = "control-label" })
                    <div class="row">
                        <div class="col-md-6">
                            @Html.DropDownList("giuong", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.chi_tiet_dat_giuong.ToList().FirstOrDefault().giuong.magiuong, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-md-4">
                            <button type="button" value="Thêm" name="btnThemGiuong" class="btn-default btn">Thêm giường</button>
                        </div>
                    </div>
                </div>
            </div>
           <table border="1" cellpadding="1" width="100%">
               <tr>
