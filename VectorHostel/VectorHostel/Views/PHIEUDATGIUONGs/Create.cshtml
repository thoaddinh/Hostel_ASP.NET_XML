                        @Html.EditorFor(model => model.khachhang.ngaysinh, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                        @Html.ValidationMessageFor(model => model.khachhang.ngaysinh, "", new { @class = "text-danger" })
