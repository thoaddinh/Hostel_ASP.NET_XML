               </tr>
           </table>
                <div class="form-group row">
                    <div id="button-area">
                        <input type="submit" value="Tạo Phiếu" class="btn btn-default" />
                        <button id="btn-Clear" type="reset" class="btn btn-default">Reset</button>
                    </div>
                </div>
            </div>

    }

</section>
