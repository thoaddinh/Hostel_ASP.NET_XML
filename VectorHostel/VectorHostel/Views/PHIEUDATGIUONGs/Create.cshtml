                        @Html.ValidationMessageFor(model => model.chi_tiet_dat_giuong.ToList().FirstOrDefault().ngaydi, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-5">
