                    <div class="col-md-5">
                        @Html.EditorFor(model => model.maphieu, new { htmlAttributes = new { @class = "form-control", @disabled = "disable", @placeholder = ViewBag.maphieu }  })
                       
                    </div>
                </div>
                <div class="col-md-offset-2 col-md-5">
